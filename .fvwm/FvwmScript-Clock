WindowTitle {DateTime}
WindowSize  200 60
Font "xft:Noto Sans:style=Regular:size=12" 

Init
 Begin
  Set $Time = (GetOutput {exec date "+%k:%M"} 1 -1)
  Set $Date = (GetOutput {exec date "+%a %b %e"} 1 -1)

  ChangeTitle 1 $Time
  ChangeTitle 2 $Date
End

PeriodicTasks
 Begin 
  If (RemainderOfDiv (GetTime) 15)==0 Then
  Begin
   Set $Time = (GetOutput {exec date "+%k:%M"} 1 -1)
   Set $Date = (GetOutput {exec date "+%a %b %d"} 1 -1)

   ChangeTitle 1 $Time
   ChangeTitle 2 $Date
  End
End

Widget 1
Property
 Position 0 0
 Size 200 30
 Font "xft:Noto Mono:style=Regular:size=16"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End

Widget 2
Property
 Position 0 30
 Size 200 30
 Font "xft:Noto Mono:style=Regular:size=11"
 Type ItemDraw
 Flags NoReliefString
 Title {}
Main
 Case message of
  SingleClic :
  Begin
  End
End
