# executor uptime
execp = new
execp_font = Office Code Pro Regular 11
execp_font_color = #9063E0 100
execp_background_id = 0
execp_centered = 1
execp_padding = 12 0 0
execp_command = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
execp_interval = 3
execp_lclick_command = urxvt -e htop -s PERCENT_CPU

# executor cpu
execp = new
execp_font = Office Code Pro Regular 11
execp_font_color = #81B35D 100
execp_background_id = 0
execp_centered = 1
execp_padding = 12 0 0
execp_command = mpstat 1 1 | awk '$3 ~ /CPU/ { for(i=1;i<=NF;i++) { if ($i ~ /%idle/) field=i } } $3 ~ /all/ { printf("%d%",100 - $field) }'
execp_interval = 3
execp_lclick_command = urxvt -e htop -s PERCENT_CPU

# executor load
execp = new
execp_font = Office Code Pro Regular 11
execp_font_color = #B38C5D 100
execp_background_id = 0
execp_centered = 1
execp_padding = 12 0 0
execp_command = awk '{print $1" "$2" "$3}' < /proc/loadavg
execp_interval = 3
execp_lclick_command = urxvt -e htop -s PERCENT_CPU

